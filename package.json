{
  "name": "react-voice-to-speech",
  "description": "A lightweight, customizable React component and hook for voice-to-text recognition using the Web Speech API. Includes a built-in recording overlay.",
  "version": "1.0.4",
  "type": "module",
  "sideEffects": [
    "**/*.css"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/felipecarrillo100/react-voice-to-speech.git"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./dist/index.css": "./dist/index.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "build": "npm run build:expanded && npm run build:minified",
    "build:expanded": "tsup src/index.ts --format cjs,esm --dts --clean --splitting --loader \".scss=css\"",
    "build:minified": "tsup src/index.ts --format cjs,esm --minify --clean=false --splitting --loader \".scss=css\" --outDir dist/temp",
    "postbuild": "copy dist\\temp\\index.css dist\\index.min.css && rd /s /q dist\\temp"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/browser": "^4.0.18",
    "@vitest/browser-playwright": "^4.0.18",
    "jsdom": "^27.0.1",
    "playwright": "^1.58.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sass": "^1.97.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "vitest-browser-react": "^2.0.5"
  }
}
